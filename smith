    <script>
        // Sample Data (In production, this would come from your PHP backend)
        let currentUser = null;
        let applications = [
            {id: 1, type: 'NPK', quantity: 200, date: '2026-01-10', status: 'completed', notes: 'For wheat season'},
            {id: 2, type: 'Urea', quantity: 150, date: '2026-01-12', status: 'delivered', notes: 'Urgent delivery needed'},
            {id: 3, type: 'DAP', quantity: 100, date: '2026-01-15', status: 'approved', notes: 'For vegetable garden'},
            {id: 4, type: 'Organic', quantity: 300, date: '2026-01-17', status: 'pending', notes: 'Organic farming section'}
        ];

        // Check if user is logged in
        function checkAuth() {
            currentUser = JSON.parse(localStorage.getItem('currentUser'));
            if (currentUser) {
                document.getElementById('bottomNav').style.display = 'flex';
                showPage('home');
            }
        }

        // Login
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;

            // Demo login (in production, verify with backend)
            if (email && password) {
                currentUser = {
                    id: 1,
                    name: 'Jane Kamau',
                    email: email,
                    phone: '+254 712 345678',
                    farmSize: 15.5,
                    location: 'Kiambu County'
                };
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                document.getElementById('bottomNav').style.display = 'flex';
                showPage('home');
                loadProfileData();
                loadApplications();
            }
        });

        // Register
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const password = document.getElementById('regPassword').value;
            const confirmPassword = document.getElementById('regConfirmPassword').value;

            if (password !== confirmPassword) {
                showAlert('registerAlert', 'Passwords do not match!', 'error');
                return;
            }

            showAlert('registerAlert', 'Registration successful! You can now login.', 'success');
            setTimeout(() => showPage('login'), 2000);
        });

        // New Application
        document.getElementById('newApplicationForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const newApp = {
                id: applications.length + 1,
                type: document.getElementById('fertilizerType').value,
                quantity: document.getElementById('quantity').value,
                date: new Date().toISOString().split('T')[0],
                status: 'pending',
                notes: document.getElementById('notes').value
            };
            applications.unshift(newApp);
            showAlert('newAppAlert', 'Application submitted successfully!', 'success');
            this.reset();
            loadApplications();
            setTimeout(() => showPage('applications'), 2000);
        });

        // Update Profile
        document.getElementById('updateProfileForm').addEventListener('submit', function(e) {
            e.preventDefault();
            currentUser.name = document.getElementById('profileName').value;
            currentUser.email = document.getElementById('profileEmail').value;
            currentUser.phone = document.getElementById('profilePhone').value;
            currentUser.farmSize = document.getElementById('profileFarmSize').value;
            currentUser.location = document.getElementById('profileLocation').value;
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            showAlert('profileAlert', 'Profile updated successfully!', 'success');
            loadProfileData();
        });

        // Load profile data
        function loadProfileData() {
            if (!currentUser) return;
            
            document.getElementById('profileInfo').innerHTML = `
                <div class="info-row">
                    <span class="info-label">Name</span>
                    <span class="info-value">${currentUser.name}</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Email</span>
                    <span class="info-value">${currentUser.email}</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Phone</span>
                    <span class="info-value">${currentUser.phone}</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Farm Size</span>
                    <span class="info-value">${currentUser.farmSize} acres</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Location</span>
                    <span class="info-value">${currentUser.location}</span>
                </div>
            `;

            document.getElementById('profileName').value = currentUser.name;
            document.getElementById('profileEmail').value = currentUser.email;
            document.getElementById('profilePhone').value = currentUser.phone;
            document.getElementById('profileFarmSize').value = currentUser.farmSize;
            document.getElementById('profileLocation').value = currentUser.location;
            document.getElementById('headerSubtitle').textContent = `Welcome, ${currentUser.name}`;
        }

        // Load applications
        function loadApplications() {
            const recentHTML = applications.slice(0, 3).map(app => createApplicationHTML(app)).join('');
            const allHTML = applications.map(app => createApplicationHTML(app)).join('');
            
            document.getElementById('recentApplications').innerHTML = recentHTML || '<div class="empty-state">No applications yet</div>';
            document.getElementById('allApplications').innerHTML = allHTML || '<div class="empty-state">No applications yet</div>';
            
            document.getElementById('totalApplications').textContent = applications.length;
            document.getElementById('pendingApplications').textContent = applications.filter(a => a.status === 'pending').length;
        }

        function createApplicationHTML(app) {
            return `
                <div class="application-item">
                    <h4>${app.type} - ${app.quantity} kg</h4>
                    <p>üìÖ ${new Date(app.date).toLocaleDateString()}</p>
                    <p>üìù ${app.notes}</p>
                    <p><span class="status-badge status-${app.status}">${app.status}</span></p>
                </div>
            `;
        }

        // Show page
        function showPage(pageName) {
            document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            
            document.getElementById(pageName + 'Page').classList.add('active');
            
            const navItems = document.querySelectorAll('.nav-item');
            if (pageName === 'home') navItems[0].classList.add('active');
            else if (pageName === 'applications') navItems[1].classList.add('active');
            else if (pageName === 'newApplication') navItems[2].classList.add('active');
            else if (pageName === 'profile') navItems[3].classList.add('active');
        }

        function showAlert(id, message, type) {
            const alert = document.getElementById(id);
            alert.textContent = message;
            alert.className = `alert alert-${type}`;
            alert.classList.remove('hidden');
            setTimeout(() => alert.classList.add('hidden'), 5000);
        }

        function logout() {
            localStorage.removeItem('currentUser');
            currentUser = null;
            document.getElementById('bottomNav').style.display = 'none';
            showPage('login');
        }

        // Initialize
        checkAuth();
        if (currentUser) {
            loadProfileData();
            loadApplications();
        }

        // Register service worker for PWA
        if ('serviceWorker' in navigator) {
            navigator.serviceWorker.register('sw.js');
        }
    </script>
</body>
</html>

