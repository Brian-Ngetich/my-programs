    }
  ]
}

<!-- sw.js - Service Worker for Offline Support -->
const CACHE_NAME = 'fertilizer-app-v1';
const urlsToCache = [
  '/',
  '/index.html',
  '/manifest.json'
];

self.addEventListener('install', event => {
  event.waitUntil(
    caches.open(CACHE_NAME)
      .then(cache => cache.addAll(urlsToCache))
  );
});

self.addEventListener('fetch', event => {
  event.respondWith(
    caches.match(event.request)
      .then(response => response || fetch(event.request))
  );
});

<!-- PHP API Integration (api.php) - Connect to your existing backend -->
<?php
// This file connects the mobile app to your existing PHP backend
header('Content-Type: application/json');
header('Access-Control-Allow-Origin: *');

require_once 'config.php';

$action = $_GET['action'] ?? '';

switch($action) {
    case 'login':
        $email = $_POST['email'];
        $password = $_POST['password'];
        
        $stmt = $pdo->prepare("SELECT * FROM farmers WHERE email = ?");
        $stmt->execute([$email]);
        $farmer = $stmt->fetch(PDO::FETCH_ASSOC);
        
        if ($farmer && password_verify($password, $farmer['password'])) {
            unset($farmer['password']);
            echo json_encode(['success' => true, 'user' => $farmer]);
        } else {
            echo json_encode(['success' => false, 'message' => 'Invalid credentials']);
        }
        break;
        
    case 'register':
        $data = json_decode(file_get_contents('php://input'), true);
        $hashed_password = password_hash($data['password'], PASSWORD_DEFAULT);
        
        $stmt = $pdo->prepare("INSERT INTO farmers (full_name, email, phone, password, farm_size, location) VALUES (?, ?, ?, ?, ?, ?)");
        
        if ($stmt->execute([$data['name'], $data['email'], $data['phone'], $hashed_password, $data['farm_size'], $data['location']])) {
            echo json_encode(['success' => true]);
        } else {
            echo json_encode(['success' => false, 'message' => 'Registration failed']);
        }
        break;
        
    case 'getApplications':
        $farmer_id = $_GET['farmer_id'];
        $stmt = $pdo->prepare("SELECT * FROM applications WHERE farmer_id = ? ORDER BY created_at DESC");
        $stmt->execute([$farmer_id]);
        echo json_encode($stmt->fetchAll(PDO::FETCH_ASSOC));
        break;
        
    case 'newApplication':
        $data = json_decode(file_get_contents('php://input'), true);
        $stmt = $pdo->prepare("INSERT INTO applications (farmer_id, fertilizer_type, quantity, application_date, notes) VALUES (?, ?, ?, NOW(), ?)");
        
        if ($stmt->execute([$data['farmer_id'], $data['type'], $data['quantity'], $data['notes']])) {
            echo json_encode(['success' => true]);
        } else {
            echo json_encode(['success' => false]);
        }
        break;
        
